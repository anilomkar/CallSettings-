<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="omkar.com.callsettings.PrefixerView">

    <TextView
        android:id="@+id/nameLabel"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="@string/prefix_name_label"/>

    <EditText
        android:id="@+id/nameTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/nameLabel"/>

    <TextView
        android:id="@+id/findLabel"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="@string/prefix_find_label"
        android:layout_below="@+id/nameTxt"/>

    <EditText
        android:id="@+id/findTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/findLabel"
        android:layout_below="@+id/nameTxt"/>

    <TextView
        android:id="@+id/replaceLabel"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/findTxt"
        android:text="@string/prefix_replace_label"/>

    <EditText
        android:id="@+id/replaceTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/replaceLabel"
        android:layout_below="@+id/findTxt"
        />

    <Button
        android:id="@+id/saveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/replaceTxt"
        android:layout_alignRight="@+id/replaceTxt"
        android:text="@string/save_prefix"
        />

</RelativeLayout>
